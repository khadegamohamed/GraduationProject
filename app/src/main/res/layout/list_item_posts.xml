<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_97sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_5sdp"
    app:contentPadding="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageofpost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_person_24"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_290sdp"
        android:layout_marginRight="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.08" />

    <TextView
        android:id="@+id/nameofpost"
        android:text="hello"
        android:textSize="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="17.5dp"
        android:layout_marginBottom="66.5dp"
        android:layout_marginLeft="226.5dp"
        android:layout_marginRight="52.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/thepost"
        android:text="hello"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="47.94dp"
        android:layout_marginBottom="15.5dp"
        android:layout_marginLeft="14.28dp"
        android:layout_marginRight="52.07dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.79" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>