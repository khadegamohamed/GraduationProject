<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_5sdp"
    app:contentPadding="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageButton
        android:id="@+id/deleteAndEdit"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_more_horiz_24"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeofnameandtime"
>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/student_image"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="1dp"
            android:layout_alignParentLeft="true"
            app:civ_shadow_color="#3f51b5"
        />
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_10sdp"
     android:layout_toRightOf="@+id/profileImage"
     android:orientation="vertical"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="KhadegaMoharem"
         android:id="@+id/profileName"
         android:textSize="@dimen/_17sdp"
         android:fontFamily="sans-serif-medium"
         android:textColor="@color/black"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="11 hr"
         android:id="@+id/creatAt"
         android:textSize="@dimen/_13sdp"
         android:textColor="@color/gray"
         android:fontFamily="sans-serif"
         />
 </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Hello khadega"
       android:layout_below="@+id/relativeofnameandtime"
        android:textSize="@dimen/_16sdp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ImagePost"
        android:layout_below="@+id/tv_post"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/student_image"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/numberOfLikes"
    android:text="10"
    android:textSize="@dimen/_13sdp"
    android:textColor="@color/black"
    android:layout_below="@id/ImagePost"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImagePost"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            android:id="@+id/cardlike"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/likedark"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_like"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="10"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            android:id="@+id/cardcomment"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/chat"               />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/numberOfComment"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="10"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>